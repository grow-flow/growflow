{
  "name": "growflow",
  "version": "1.0.0",
  "description": "Standalone plant tracking system for documenting the complete grow process",
  "main": "backend/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:build": "cd backend && npm run build",
    "frontend:build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run backend:test && npm run frontend:test",
    "backend:test": "cd backend && npm test",
    "frontend:test": "cd frontend && npm test",
    "lint": "npm run backend:lint && npm run frontend:lint",
    "backend:lint": "cd backend && npm run lint",
    "frontend:lint": "cd frontend && npm run lint",
    "docker:build": "docker build -t growflow:latest .",
    "docker:run": "docker run --rm -d --name growflow -p 8080:8080 -v $(pwd)/data:/app/data growflow:latest",
    "docker:stop": "docker stop growflow 2>/dev/null || true",
    "docker:logs": "docker logs growflow",
    "docker:health": "curl -f http://localhost:8080/api/health || echo 'Health check failed'",
    "docker:clean": "docker rmi growflow:latest 2>/dev/null || true"
  },
  "keywords": [
    "plant-tracking",
    "grow-journal",
    "cannabis",
    "cultivation",
    "timeline"
  ],
  "author": "growflow",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}